<h1>Books</h1>

<table>
  <thead>
     <th>Title</th>
     <th>Body</th>
     <th></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
  
  
</table>

<h1>New book</h1>

<%= render "errors", book: @book %>
  

<%= form_with model: @book do |f| %>
  
  <label>Title</label>
  <%= f.text_field :title %><br>
  
  <label>Body</label>
  <%= f.text_area :body %><br>
  
  <%= f.submit 'Create Book' %>
  
<% end %>